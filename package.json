{
    "name": "mark-vsce",
    "displayName": "Mark",
    "description": "Mark Notation support for Visual Studio Code",
    "version": "1.0.0",
    "publisher": "henryluo",
    "engines": {
        "vscode": "^1.25.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "mark",
            "aliases": ["Mark", "Mark Notation", "mark"],
            "extensions": [".mark", ".mk"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "mark",
            "scopeName": "source.mark",
            "path": "./syntaxes/mark.tmLanguage.json"
        }]
    },
	"repository": {
	  "type" : "git",
	  "url" : "https://github.com/henry-luo/mark-vsce"
	}
}