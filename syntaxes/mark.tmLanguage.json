{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Mark",
	"scopeName": "source.mark",
	"patterns": [
		{
			"include": "#value"
		}
	],
	"repository": {
		"array": {
			"begin": "\\[",
			"beginCaptures": {
				"0": {
					"name": "punctuation.definition.array.begin.mark"
				}
			},
			"end": "\\]",
			"endCaptures": {
				"0": {
					"name": "punctuation.definition.array.end.mark"
				}
			},
			"name": "meta.structure.array.mark",
			"patterns": [
				{
					"include": "#value"
				},
				{
					"match": ",",
					"name": "punctuation.separator.array.mark"
				}
			]
		},
		"comment": {
			"patterns": [
				{
					"begin": "/\\*",
					"captures": {
						"0": {
							"name": "punctuation.definition.comment.mark"
						}
					},
					"end": "\\*/",
					"name": "comment.block.mark"
				},
				{
					"captures": {
						"1": {
							"name": "punctuation.definition.comment.mark"
						}
					},
					"match": "(//).*$\\n?",
					"name": "comment.line.double-slash.mark"
				}
			]
		},
		"list": {
			"begin": "\\(",
			"beginCaptures": {
				"0": {
					"name": "punctuation.definition.list.begin.mark"
				}
			},
			"end": "\\)",
			"endCaptures": {
				"0": {
					"name": "punctuation.definition.list.end.mark"
				}
			},
			"name": "meta.structure.list.mark",
			"patterns": [
				{
					"include": "#value"
				},
				{
					"match": ",",
					"name": "punctuation.separator.list.mark"
				}
			]
		},	
		"binary": {
			"patterns": [
				{
					"begin": "b'\\\\(?:x|64)",
					"end": "'",
					"name": "constant.other.binary.mark",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.binary.begin.mark"
						}
					},
					"endCaptures": {
						"0": {
							"name": "punctuation.definition.binary.end.mark"
						}
					}
				}
			]
		},
		"datetime": {
			"patterns": [
				{
					"begin": "t'",
					"end": "'",
					"name": "constant.other.datetime.mark",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.datetime.begin.mark"
						}
					},
					"endCaptures": {
						"0": {
							"name": "punctuation.definition.datetime.end.mark"
						}
					}
				}
			]
		},
		"symbol": {
			"begin": "'",
			"end": "'",
			"name": "constant.other.symbol.mark",
			"beginCaptures": {
				"0": {
					"name": "punctuation.definition.symbol.begin.mark"
				}
			},
			"endCaptures": {
				"0": {
					"name": "punctuation.definition.symbol.end.mark"
				}
			},
			"patterns": [
				{
					"include": "#string-content"
				}
			]
		},			
		"constant": {
			"match": "\\b(?:true|false|null|NaN|Infinity)\\b",
			"name": "constant.language.mark"
		},
		"number": {
			"match": "(?x)        # turn on extended mode\n  -?        # an optional minus\n  (?:\n    0       # a zero\n    |       # ...or...\n    [1-9]   # a 1-9 character\n    \\d*     # followed by zero or more digits\n  )\n  (?:\n    (?:\n      \\.    # a period\n      \\d+   # followed by one or more digits\n    )?\n    (?:\n      [eE]  # an e character\n      [+-]? # followed by an option +/-\n      \\d+   # followed by one or more digits\n    )?      # make exponent optional\n  )?        # make decimal portion optional\n  (?:n)?    # optional 'n' suffix for BigInt",
			"name": "constant.numeric.mark"
		},
		"string-content": {
			"patterns": [
				{
					"match": "(?x)                # turn on extended mode\n  \\\\                # a literal backslash\n  (?:               # ...followed by...\n    [\"\\\\/bfnrt]     # one of these characters\n    |               # ...or...\n    u               # a u\n    [0-9a-fA-F]{4}) # and four hex digits",
					"name": "constant.character.escape.mark"
				},
				{
					"match": "\\\\.",
					"name": "invalid.illegal.unrecognized-string-escape.mark"
				}
			]
		},		
		"double-string": {
			"begin": "\"",
			"beginCaptures": {
				"0": {
					"name": "punctuation.definition.string.begin.mark"
				}
			},
			"end": "\"",
			"endCaptures": {
				"0": {
					"name": "punctuation.definition.string.end.mark"
				}
			},
			"name": "string.quoted.double.mark",
			"patterns": [
				{
					"include": "#string-content"
				}
			]
		},
		"string": {
			"patterns": [
				{
					"include": "#double-string"
				}
			]
		},
		"identifier": {
			"name": "support.type.property-name.json",
			"match": "[a-zA-Z$_]([a-zA-Z0-9$_\\-\\.])*"			
		},
		"object-key": {
			"name": "support.type.property-name.json",
			"patterns": [
				{
					"include": "#identifier"
				},			
				{
					"name": "support.type.property-name.json",
					"begin": "\"",
					"beginCaptures": {
						"0": {
							"name": "punctuation.support.type.property-name.begin.mark"
						}
					},
					"end": "\"",
					"endCaptures": {
						"0": {
							"name": "punctuation.support.type.property-name.end.json"
						}
					},
					"patterns": [
						{
							"include": "#string-content"
						}
					]
				},
				{
					"name": "support.type.property-name.json",
					"begin": "'",
					"beginCaptures": {
						"0": {
							"name": "punctuation.support.type.property-name.begin.mark"
						}
					},
					"end": "'",
					"endCaptures": {
						"0": {
							"name": "punctuation.support.type.property-name.end.mark"
						}
					},
					"patterns": [
						{
							"include": "#string-content"
						}
					]
				}
			]
		},
		"element": {
			"name": "meta.structure.element.mark",
			"begin": "<",
			"beginCaptures": {
				"0": {
					"name": "punctuation.definition.element.begin.mark"
				}
			},
			"end": ">",
			"endCaptures": {
				"0": {
					"name": "punctuation.definition.element.end.mark"
				}
			},
			"patterns": [
				{
					"comment": "Element name",
					"match": "\\G[a-zA-Z$_][a-zA-Z0-9$_\\-\\.]*",
					"name": "entity.name.tag.mark"
				},
				{
					"comment": "Element attributes",
					"include": "#object-key"
				},
				{
					"include": "#comments"
				},
				{
					"begin": ":",
					"beginCaptures": {
						"0": {
							"name": "punctuation.separator.dictionary.key-value.mark"
						}
					},
					"end": "(,)|(;)|(?=>)|(?=[a-zA-Z$_])",
					"endCaptures": {
						"1": {
							"name": "punctuation.separator.dictionary.pair.mark"
						},
						"2": {
							"name": "punctuation.separator.element.content.mark"
						}
					},
					"name": "meta.structure.element.value.mark",
					"patterns": [
						{
							"comment": "Element attribute value",
							"include": "#value"
						}
					]
				},
				{
					"comment": "Element content after semicolon",
					"begin": ";",
					"beginCaptures": {
						"0": {
							"name": "punctuation.separator.element.content.mark"
						}
					},
					"end": "(?=>)",
					"patterns": [
						{
							"include": "#value"
						}
					]
				},
				{
					"comment": "Element content (mixed)",
					"include": "#value"
				}
			]
		},
		"object": {
			"name": "meta.structure.dictionary.mark",
			"begin": "\\{",
			"beginCaptures": {
				"0": {
					"name": "punctuation.definition.dictionary.begin.mark"
				}
			},
			"end": "\\}",
			"endCaptures": {
				"0": {
					"name": "punctuation.definition.dictionary.end.mark"
				}
			},
			"patterns": [
				{
					"comment": "JSON or Mark object key",
					"include": "#object-key"
				},
				{
					"include": "#comments"
				},
				{
					"begin": ":",
					"beginCaptures": {
						"0": {
							"name": "punctuation.separator.dictionary.key-value.mark"
						}
					},
					"end": "(,)|(?=\\})|(?=[a-zA-Z$_])",
					"endCaptures": {
						"1": {
							"name": "punctuation.separator.dictionary.pair.mark"
						}
					},
					"name": "meta.structure.dictionary.value.mark",
					"patterns": [
						{
							"comment": "JSON or Mark object value",
							"include": "#value"
						}
					]
				}
			]		
		},	
		"value": {
			"patterns": [
				{
					"include": "#comment"
				},
				{
					"include": "#constant"
				},
				{
					"include": "#number"
				},
				{
					"include": "#binary"
				},
				{
					"include": "#datetime"
				},
				{
					"include": "#symbol"
				},
				{
					"include": "#string"
				},
				{
					"include": "#array"
				},
				{
					"include": "#list"
				},
				{
					"include": "#element"
				},
				{
					"include": "#object"
				}				
			]
		}
	}
}